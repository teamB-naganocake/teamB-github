<div class="container">
  <div class="row my-3 offset-1 text-center">
    <h1>注文情報確認</h1>
  </div>

  <div class="row">
    <div class="col-6">
      <table class="table table-bordered">
        <thead class="table-active">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
          <% @sum += cart_item.subtotal %>
          <tbody>
            <tr>
              <td>
                <%= image_tag cart_item.item.get_image(100,100) %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>

    <div class="col-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-active">配送料</th>
            <td><%= @order.shipping_cost.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="table-active">商品合計</th>
            <td><%= @sum.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="table-active">ご請求額</th>
            <td>
              <% @order.total_payment = @order.shipping_cost + @sum %>
              <%= @order.total_payment.to_s(:delimited) %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-2">
      <h2>支払方法</h2>
    </div>
    <div class="col-8">
      <p><%= @order.payment_method_i18n %></p>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-2">
      <h2>お届け先</h2>
    </div>
    <div class="col-8">
      <p>
      〒<%= @order.postal_code %>
      <%= @order.address %><br>
      <%= @order.name %>
      </p>
    </div>
  </div>

</div>

<%= form_with model: @order, url: public_orders_path, method: :post do |f| %>
  <%= f.hidden_field :customer_id, value: current_customer.id %>
  <%= f.hidden_field :payment_method, value: @order.payment_method %>
  <%= f.hidden_field :shipping_cost, value: @order.shipping_cost %>
  <%= f.hidden_field :postal_code, value: @order.postal_code %>
  <%= f.hidden_field :total_payment, value: @order.total_payment %>
  <%= f.hidden_field :address, value: @order.address %>
  <%= f.hidden_field :name, value: @order.customer.full_name %>
  <%= f.hidden_field :status, value: :awaiting_payment %>
  <div class="align-middle my-3 text-center">
    <%= f.submit "注文を確定する", class:"btn btn-success" %>
  </div>
<% end %>