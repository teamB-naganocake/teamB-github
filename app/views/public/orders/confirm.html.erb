<h1>注文情報確認</h1>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>

  <% @cart_items.each do |cart_item| %>
    <% @sum += cart_item.subtotal %>
    <tbody>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image(100,100) %>
          <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal.to_s(:delimited) %></td>
      </tr>
    </tbody>
  <% end %>
</table>

<table>
  <tbody>
    <tr>
      <th>配送料</th>
      <td><%= @order.shipping_cost.to_s(:delimited) %></td>
    </tr>

    <tr>
      <th>商品合計</th>
      <td><%= @sum.to_s(:delimited) %></td>
    </tr>

    <tr>
      <th>ご請求額</th>
      <td>
        <% @order.total_payment = @order.shipping_cost + @sum %>
        <%= @order.total_payment.to_s(:delimited) %>
      </td>
    </tr>
  </tbody>
</table>

<div>
  <h2>支払方法</h2>
  <p><%= @order.payment_method_i18n %></p>
</div>
<div>
  <h2>お届け先</h2>
  <p>
    〒<%= @order.postal_code %>
    <%= @order.address %><br>
    <%= @order.name %>
  </p>
</div>


<%= form_with model: @order, url: public_orders_path, method: :post do |f| %>
  <%= f.hidden_field :customer_id, value: current_customer.id %>
  <%= f.hidden_field :payment_method, value: @order.payment_method %>
  <%= f.hidden_field :shipping_cost, value: @order.shipping_cost %>
  <%= f.hidden_field :postal_code, value: @order.postal_code %>
  <%= f.hidden_field :total_payment, value: @order.total_payment %>
  <%= f.hidden_field :address, value: @order.address %>
  <%= f.hidden_field :name, value: @order.customer.full_name %>
  <%= f.submit "注文を確定する" %>
<% end %>