<div clas="container">
  <div class="row mt-3 mb-3 offset-1 text-center">
    <h2>ログイン</h2>
  </div>

  <div class="row mt-3 mb-3 offset-1 text-center">
    <div class="text-left">
      <h3>会員の方はこちらからログイン</h3>
    </div>
  </div>


  <%= form_with model: @customer, url: new_customer_session_path, local: true do |f| %>
    <form class="form-horizontal">

    <div class="form-group row my-3">
      <%= f.label :"メールアドレス",class:"col-sm-2 control-label" %><br />
      <div class="col-sm-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com",class:"form-control" %>
      </div>
    </div>

    <div class="form-group row my-3">
      <%= f.label "パスワード",class:"col-sm-2 control-label" %><br />
      <div class="col-sm-3">
        <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
      </div>
    </div>

    <div class="text-center my-5">
      <%= f.submit "ログイン", class:"btn btn-primary" %>
    </div>
  <% end %>




  <div class="row m-4">
    <div class="text-center offset-1">
      <h3 class="px-4">会員登録がお済みでない方</h3>
        <%= link_to "こちら", new_customer_registration_path %>から新規登録をしてください
    </div>
  </div>

</div>
