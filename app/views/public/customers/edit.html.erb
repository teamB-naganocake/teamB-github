<h1>会員情報編集</h1>

<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"氏名" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder: "苗字" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder: "名前" %>
  </div>

  <div class= "field">
     <%= f.label :"フリガナ" %>
     <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "ミョウジ" %>
     <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",placeholder: "ナマエ" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "00000000" %>
  </div>

  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号" %>
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "0000000000" %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "sample@example.com" %>
  </div>

  <%= link_to "編集内容を保存", public_customers_mypage_path %>
  <%= link_to "退会する", public_customers_unsubscribe_path %>

<% end %>