<div class="container">
  <div class="row mt-3 mb-3 offset-1 text-center">
    <h2>会員情報編集</h2>
  </div>

  <div class="row">
    <div class="col">
      <%= form_with model: @customer, url: public_customers_information_path, method: :patch,  local: true do |f| %>
        <form class="form-horizontal">

          <div class="form-group row">
            <%= f.label :"氏名",class:"col-sm-2 control-label" %>
            <div class="col-sm-3">
              <%= f.text_field :last_name,class:"form-control" %>
            </div>
            <div class="col-sm-3">
              <%= f.text_field :first_name,class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :"フリガナ",class:"col-sm-2 control-label" %>
            <div class="col-sm-3">
              <%= f.text_field :last_name_kana,class:"form-control" %>
            </div>
            <div class="col-sm-3">
              <%= f.text_field :first_name_kana,class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :"郵便番号",class:"col-sm-2 control-label" %>
            <div class="col-sm-3">
              <%= f.text_field :postal_code,class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :"住所",class:"col-sm-2 control-label" %>
            <div class="col-sm-6">
              <%= f.text_field :address,class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :"電話番号",class:"col-sm-2 control-label" %>
            <div class="col-sm-3">
              <%= f.telephone_field :telephone_number,class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :"メールアドレス",class:"col-sm-2 control-label" %>
            <div class="col-sm-3">
              <%= f.email_field :email,class:"form-control" %>
            </div>
          </div>

          <div class="text-center my-5 ">
            <%= f.submit "編集内容を保存", class:"col-sm-2 mr-5 btn btn-success" %>
            <%= link_to "退会する", public_customers_unsubscribe_path, class:"ml-5 btn btn-danger" %>
          </div>

        </form>
      <% end %>
    </div>
  </div>

</div>