<div class="container">
  <div class="row my-3 offset-1 text-center">
    <h2>新規会員登録</h2>
  </div>

  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <form class="form-horizontal">

      <div class="form-group row my-3">
        <%= f.label :"名前",class:"col-sm-2 control-label" %>
        <div class="col-1 text-right">
          <%= f.label :"(姓)",class:"control-label" %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder: "苗字",class:"form-control" %>
        </div>
        <div class="col-1 text-right">
          <%= f.label :"(名)",class:"control-label" %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder: "名前",class:"form-control" %>
        </div>
      </div>

      <div class="form-group row my-3">
        <%= f.label :"フリガナ",class:"col-sm-2 control-label" %>
        <div class="col-1 text-right">
          <%= f.label :"(セイ)",class:"control-label" %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "ミョウジ",class:"form-control" %>
        </div>
        <div class="col-1 text-right">
          <%= f.label :"(メイ)",class:"control-label" %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",placeholder: "ナマエ",class:"form-control" %>
        </div>
      </div>


      <div class="form-group row my-3">
        <%= f.label :"メールアドレス",class:"col-sm-3 control-label" %>
        <div class="col-sm-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "sample@example.com",class:"form-control" %>
        </div>
      </div>

      <div class="form-group row my-3">
        <%= f.label :"郵便番号(ハイフンなし)",class:"col-sm-3 control-label" %>
        <div class="col-sm-3">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "00000000",class:"form-control" %>
        </div>
      </div>

      <div class="form-group row my-3">
        <%= f.label :"住所",class:"col-sm-3 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0",class:"form-control" %>
        </div>
      </div>

      <div class="form-group row my-3">
        <%= f.label :"電話番号(ハイフンなし)",class:"col-sm-3 control-label" %>
        <div class="col-sm-3">
          <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "0000000000",class:"form-control" %>
        </div>
      </div>

      <div class="form-group row my-3">
        <%= f.label :"パスワード6文字以上",class:"col-sm-3 control-label" %>
        <div class="col-sm-3">
          <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
        </div>
      </div>

      <div class="form-group row my-3">
        <%= f.label :"パスワード(確認用)",class:"col-sm-3 control-label" %>
        <div class="col-sm-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
        </div>
      </div>

      <div class="text-center my-5">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>

    </form>
  <% end %>

  <div class="row m-4">
    <div class="text-center offset-1">
      <h2 class="px-4 title-background">既に登録済みの方</h2>
      <div class="ml-5">
        <%= link_to "こちら", new_customer_session_path %>からログインしてください
      </div>
    </div>
  </div>
</div>