
<div class="container">
  <div class="row my-3 offset-1 text-center">
    <h1>商品一覧(全<%= @items.count %>件)</h1>
  </div>
  <div class="row my-3">
    <% @items.each do |item| %>
      <div class="box" style="float:left; margin-right:20px;">
          <%= link_to public_item_path(item) do %>
          <%= image_tag item.get_image(120,120), fallback: "no_image.jpg" %>
          <% end %>
      <p><%= link_to item.name, public_item_path(item) %></p>
      <p>
         <% if item.is_active %>
         <%= item.price.to_s(:delimited) %>円
         <% elsif %>
         <p style="color:red">販売停止</p>
         <% end %>
       </p>
      </div>
    <% end %>
  </div>
  <%= paginate @items %>
</div>
