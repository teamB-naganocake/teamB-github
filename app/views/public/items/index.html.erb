<h1>商品一覧</h1>
<div>
    <% @items.each do |item| %>
    <table>
        <tr>
            <th>
                <%= link_to public_items_path(item) do %>
                  <%= image_tag item.get_image(100,100) %>
                <% end %>
            </th>
        </tr>
        <tr>
          <th>
            <%= link_to item.name, public_item_path(item) %>
          </th>
        </tr>
        <tr>
            <th><%= item.price %>円</th>
        </tr>
         <th><% if item.is_active %>
               <p>販売中</p>
            <% elsif %>
               <p>販売停止</p>
            <% end %>
        </th>
    </table>
</div>
<% end %>

