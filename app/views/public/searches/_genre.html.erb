<div class="genre_search bg-white p-3">
  <table class="table table-bordered">
    <tr>
      <th class="table-active">ジャンル検索</th>
    </tr>
      <%= form_with url: public_genre_genre_search_path, method: :get do |f| %>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= link_to genre.name, public_genre_genre_search_path(genre_id: genre.id), method: :get %></td>
          </tr>
        <% end %>
      <% end %>
  </table>
</div>