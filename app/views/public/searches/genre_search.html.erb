<div class="container">
  <div class="row">
    <div class="col-md-2 mx-auto my-3">
      <%= render 'public/searches/genre' ,genres: @genres %>
    </div>

    <div class="col-md-10 my-3">
      <h1>検索結果</h1>

      <div class="search-items d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="mt-4">
            <%= link_to public_item_path(item.id) do %>
              <%= image_tag item.get_image(120,120), fallback: "no_image.jpg" %>
            <% end %>
            <p><%= link_to item.name, public_item_path(item) %></p>
            <p>
              <% if item.is_active %>
                <%= item.price.to_s(:delimited) %>円
              <% elsif %>
                <p style="color:red">販売停止</p>
              <% end %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>