<div class="container">
  <div class="row mt-3 mb-3 offset-1 text-center">
    <h2><%= @customer.full_name %>さんの会員詳細編集</h2>
  </div>
  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch, local: true do |f| %>

  <table class="table">
    <tr>
      <div>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "氏名" %></td>
        <td><%= f.text_field :last_name,  placeholder: "姓" %></td>
        <td><%= f.text_field :first_name,  placeholder: "名" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "フリガナ" %></td>
        <td><%= f.text_field :last_name_kana, placeholder: "セイ" %></td>
        <td><%= f.text_field :first_name_kana, placeholder: "メイ" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "メールアドレス" %></td>
        <td><%= f.email_field :email, placeholder: "xxxxx@xxxxx.com" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "郵便番号(ハイフンなし)" %></td>
        <td><%= f.text_field :postal_code, placeholder: "xxxxxxx" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "住所" %></td>
        <td><%= f.text_field :address, placeholder: "長野県XX市XX区XX町0-0" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "電話番号(ハイフンなし)" %></td>
        <td><%= f.text_field :telephone_number, placeholder: "0901231234" %></td>
      </div>
    </tr>

    <tr>
      <div>
        <td><%= f.label "会員ステータス" %></td>
        <td><%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効" %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会" %><br/>
        </td>
      </div>
    </tr>
  </table>

  <div align="center">
    <%= f.submit "変更を保存", class: 'btn btn-success' %>
  </div>
  <% end %>
  <div class="mb-3"></div>
</div>
