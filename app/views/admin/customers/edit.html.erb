<div class="container">
  <div class="row">
    <div>
      <h2><%= @customer.last_name %> <%= @customer.first_name %>さんの会員編集</h2>
    </div>
  </div>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), local: :true do |f| %>
    <div class="row">
      <div class="col"><%= f.label "お名前" %></div>
      <div class="col"><%= f.label "(姓)" %></div>
      <div class="col"><%= f.text_field :last_name, :size => "10", placeholder: "姓" %></div>
      <div class="col"><%= f.label "(名)" %></div>
      <div class="col"><%= f.text_field :first_name, :size => "10", placeholder: "名" %></div>
    </div>
    <div class="row">
      <div class="col"><%= f.label "フリガナ" %></div>
      <div class="col"><%= f.label "(セイ)" %></div>
      <div class="col"><%= f.text_field :last_name_kana, placeholder: "セイ" %></div>
      <div class="col"><%= f.label "(メイ)" %></div>
      <div class="col"><%= f.text_field :first_name_kana, placeholder: "メイ" %></div>
    </div>
    <div class="row">
      <div class="col"><%= f.label "メールアドレス" %></div>
      <div class="col"><%= f.email_field :email, placeholder: "xxxxx@xxxxx.com" %></div>
    </div>
    <div class="row">
      <div class="col"><%= f.label "郵便番号(ハイフンなし)" %></div>
      <div class="col"><%= f.text_field :postcode, placeholder: "xxxxxxx" %></div>
    </div>
    <div class="row">
      <div class="col"><%= f.label "住所" %></div>
      <div class="col"><%= f.text_field :address, placeholder: "長野県XX市XX区XX町0-0" %></div>
    </div>
    <div class="row">
      <div class="col"><%= f.label "電話番号(ハイフンなし)" %></div>
      <div class="col"><%= f.text_field :tel, placeholder: "0901231234" %></div>
    </div>
    <div class="row">
      <div class="col"><%= f.label "会員ステータス" %></div>
      <div class="col"></div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>