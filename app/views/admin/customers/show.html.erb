<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2><%= @customer.full_name %>さんの会員詳細 </h2>
    </div>
    <table class="table">
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.full_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.full_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス </td>
        <td>
          <% if @customer.is_active == true%>
            <p class="">退会済</p>
          <% else %>
            <p class="text-success">有効</p>
          <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          <%= link_to "編集する", edit_admin_customer_path(@customer),class:"btn btn-success my-1 mx-4 px-4" %>
          <%= link_to "注文履歴", public_orders_path,class:"btn btn-primary mx-4 px-4" %>
        </td>
      </tr>
    </table>
  </div>
</div>



