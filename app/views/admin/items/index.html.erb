<h1>商品一覧</h1>

 <%= link_to '商品追加',new_admin_item_path %>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <th><%= item.id %></th>
        <th><%= link_to item.name,edit_admin_item_path(item.id) %></th>
        <!--名前をクリックし詳細ページに移動-->
        <th><%= item.price %>円</th>
        <th><%= item.genre.name %></th>
        <th><% if item.is_active %>
               <p>販売中</p>
            <% elsif %>
               <p>販売停止</p>
            <% end %>
        </th>
      </tr>
      <% end %>
  </tbody>
</table>