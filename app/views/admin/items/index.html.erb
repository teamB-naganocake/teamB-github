<div class="container">
  <div class="row my-3 offset-1 text-center">
    <h2>商品一覧</h2>
    <div class="offset-8">
      <%= link_to new_admin_item_path do %>
        <button type="button" class="btn btn-light rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
      <% end %>
    </div>
  </div>

  <table class="table table-hover table-inverse">
    <thead class="table-active">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price %>円</td>
          <td><%= item.genre.name %></td>
          <td><% if item.is_active %>
                 <p class="text-success font-weight-bold">販売中</p>
              <% elsif %>
                 <p class="font-weight-bold">販売停止</p>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row my-3 justify-content-center">
    <%= paginate @items %>
  </div>

</div>