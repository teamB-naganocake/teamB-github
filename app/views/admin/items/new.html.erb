<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path, method: :post, local: true do |f| %>


<div>
  <%= f.label :image %>
  <%= f.file_field :image, accept: "image/*"  %>
</div>
<div>
  <%= f.label :商品名 %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :商品説明 %>
  <%= f.text_area :introduction %>
</div>
<div> <%= f.label :ジャンル %>
  <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></td></div>
<div>
  <%= f.label :税抜価格 %>
  <%= f.text_field :price %>
</div>
<th><%= f.label :販売ステータス %></th>
<td><%= f.radio_button :sales_status, true, checked: true %>
    <%= f.label :sales_status, "販売中" %>
    <%= f.radio_button :sales_status, false %>
    <%= f.label :sales_status, "販売停止中" %>

<div>
  <%= f.submit "新規登録", class:"btn btn-success" %>
</div>
<% end %>