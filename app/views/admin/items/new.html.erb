<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path, method: :post, local: true do |f| %>


<div>
  <%= f.label :image %>
  <%= f.file_field :image, accept: "image/*"  %>
</div>
<div>
  <%= f.label :商品名 %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :商品説明 %>
  <%= f.text_area :introduction %>
</div>
<div> ジャンル</div>
<div>
  <%= f.label :税抜価格 %>
  <%= f.text_field :price %>
</div>
<div>販売ステータス</div>
<div>
  <%= f.submit "新規登録", class:"btn btn-success" %>
</div>
<% end %>