<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td>
          <%= link_to admin_order_path(order) do %>
            <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
          <% end %>
        </td>
        <td><%= order.customer.full_name %></td>
        <td><%= order.order_details.sum(:amount) %></td>
        <td><%= order.stats_i18n %></td>
      </tr>
    </tbody>
  <% end %>
</table>

